<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarm_row_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/row_textAlarmDescription"
        style="@style/Alarm_Description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_default" />
    <LinearLayout
        android:id="@+id/alarm_row_layout_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/row_digitview"
            style="@style/Alarm_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/row_textAlarmRecurrence"
        style="@style/Alarm_Recurrence"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/recurrence_once_only" />
</LinearLayout>